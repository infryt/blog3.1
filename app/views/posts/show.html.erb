<p id="notice"><%= notice %></p>

<p>
  <b>Titulo:</b>
  <%= @post.titulo %>
</p>

<p>
	<% if @post.has_photo? %>
 		<%= image_tag @post.photo_path%>
 	<% else %>
 		<b>Problema al cargar Foto</b>
 	<% end %>		
</p>

<p>
	<b>Body:</b>
	<%= simple_format @post.body, :class => "lead" %>
</p>
<div>
<h4>creado a:</h4>
<small><%= @post.created_at %></small>
<h3>hecho por:</h3>
<small><%= @post.user.try(:name) %></small>
</div>
<div class="fb-comments" data-href="<%=request.original_url%>" data-numposts="5" data-colorscheme="light"></div>
<div>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>

